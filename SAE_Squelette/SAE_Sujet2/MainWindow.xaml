<Window
    x:Class="SAE_Sujet2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_Sujet2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Affectation Admin"
    Width="800"
    Height="450"
    Icon="/star.png"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    Icon="/Images/star.png">
    <Grid>
        <Label
            Width="758"
            Height="68"
            Margin="0,20,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            Content="Interface Administration des affectations"
            FontFamily="72 Black"
            FontSize="36" />
        <Button
            x:Name="butAjouter"
            Width="229"
            Height="94"
            Margin="81,179,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            Click="butAjouter_Click"
            Content="Ajouter Affectation"
            FontFamily="72 Black"
            FontSize="22" />
        <Button
            x:Name="butConsulter"
            Width="229"
            Height="94"
            Margin="0,179,81,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            Click="butConsulter_Click"
            Content="Consulter&#xD;&#xA;Affectation"
            FontFamily="72 Black"
            FontSize="22" />

    </Grid>
</Window>
