<Window
    x:Class="SAE_Sujet2.AddWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_Sujet2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Ajouter une affectation"
    Width="450"
    Height="600"
    MinWidth="450"
    MinHeight="600"
    MaxWidth="450"
    MaxHeight="600"
    Icon="/star.png"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:ApplicationData />
    </Window.DataContext>
    <Grid Width="450" Height="600">
        <Label
            Width="258"
            Height="48"
            Margin="0,25,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="Black"
            Content="AJOUTER"
            FontFamily="72 Black"
            FontSize="24"
            FontWeight="Normal"
            Foreground="White" />
        <Label
            Width="158"
            Margin="30,195,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Nom de la mission :" />
        <Label
            Width="158"
            Margin="30,115,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Division concernée :" />
        <ComboBox
            x:Name="cbDivision"
            Width="187"
            Margin="30,146,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            DisplayMemberPath="LibelleDivision"
            ItemsSource="{Binding}"
            SelectedValuePath="IdDivision"
            SelectionChanged="cbDivision_SelectionChanged" />
        <ComboBox
            x:Name="cbMission"
            Width="186"
            Margin="30,226,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            DisplayMemberPath="LibelleMission"
            ItemsSource="{Binding}"
            SelectedValuePath="IdMission"
            SelectionChanged="cbDivision_SelectionChanged"
            Visibility="Visible" />
        <Label
            Width="158"
            Margin="30,273,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Date affectation :" />
        <DatePicker x:Name="dpicker" Margin="30,304,233,268" />
        <Label
            Width="187"
            Margin="30,365,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Commentaire  :" />
        <TextBox
            x:Name="tbAdd"
            Width="332"
            Height="87"
            Margin="22,396,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <Button
            x:Name="button_Add"
            Width="126"
            Height="42"
            Margin="250,512,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="button_Add_Click"
            Content="Ajouter"
            FontWeight="Bold" />
        <Button
            Width="126"
            Height="42"
            Margin="62,512,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Button_Click"
            Content="Annuler" />
        <Label
            x:Name="MissionErrorLabel"
            Width="163"
            Height="31"
            Margin="225,221,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFFF9393"
            Content="Nom de la mission requise"
            FontWeight="Bold"
            Visibility="Hidden" />
        <Label
            x:Name="DivisionErrorLabel"
            Width="163"
            Height="31"
            Margin="225,141,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFFF9393"
            Content="Nom de la division requise"
            FontWeight="Bold"
            Visibility="Hidden" />
        <Label
            x:Name="DatePickerErrorLabel"
            Width="88"
            Height="32"
            Margin="225,302,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFFF9393"
            Content="Date requise"
            FontWeight="Bold"
            Visibility="Hidden" />

    </Grid>
</Window>
